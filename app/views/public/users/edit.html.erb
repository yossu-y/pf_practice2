<h1>Public::Users#edit</h1>
<p>Find me in app/views/public/users/edit.html.erb</p>

<%= form_with model:@user, local:true do |f| %>

  <div class="form-group">
    <%= f.label :名前 %>
    <%= f.text_field :screen_name %>
  </div>

  <div class="form-group">
    <%= f.label :紹介文 %>
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
    <%= link_to "キャンセル", user_path(current_user), class: "back btn btn-light" %>
    <%= f.submit "保存", class: "btn btn-success" %>
  </div>

<% end %>
